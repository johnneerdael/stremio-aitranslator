    "debug": "^4.3.4",
    "express": "^4.18.2",
    "stremio-addon-sdk": "^1.6.10"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/stremio-aitranslator"
  },
  "keywords": [
    "stremio",
