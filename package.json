{
  "name": "stremio-aitranslator",
  "version": "1.1.2",
  "description": "Stremio addon for real-time subtitle translation using Google Gemini Flash 1.5",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "build": "esbuild src/index.js --bundle --platform=node --outfile=dist/index.js --external:express --external:cors",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "test": "jest"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "axios": "^1.6.7",
    "better-queue": "^3.8.12",
