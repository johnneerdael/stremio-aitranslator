aitranslator.thepi.es {
    # Enable compression
    encode gzip

    # Handle manifest endpoint
    handle /manifest.json {
        reverse_proxy 192.168.50.67:7000
    }

    # Handle subtitle endpoints
    handle /subtitles/* {
        reverse_proxy 192.168.50.67:3000
    }

    # Handle configuration endpoints
    handle /config {
        reverse_proxy 192.168.50.67:3000
    }

    handle /save-credentials {
        reverse_proxy 192.168.50.67:3000
    }

    # Default 404 for unmatched routes
    handle {
        respond 404
    }
} 